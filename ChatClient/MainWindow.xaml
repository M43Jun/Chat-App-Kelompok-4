<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="450" Width="800"
        Background="{DynamicResource WindowBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Bar Atas -->
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
            <TextBox x:Name="TbIp" Width="120" Text="127.0.0.1"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="TbPort" Width="60" Text="9000" Margin="5,0,0,0"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="TbUser" Width="120" Text="User"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextBrush}"/>
            <Button x:Name="BtnConnect" Content="Connect" Click="BtnConnect_Click" Margin="5,0,0,0"/>
            <Button x:Name="BtnDisconnect" Content="Disconnect" Click="BtnDisconnect_Click" Margin="5,0,0,0" IsEnabled="False"/>
            <Button x:Name="BtnToggleTheme" Content="Toggle Dark Mode" Click="ToggleTheme_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Chat dan Users -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="LbChat" Grid.Column="0"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextBrush}"/>

            <ListBox x:Name="LbUsers" Grid.Column="1"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextBrush}"
                     MouseDoubleClick="LbUsers_MouseDoubleClick"/>
        </Grid>

        <!-- Input Pesan + Typing Indicator -->
        <StackPanel Grid.Row="2" Margin="5">
            <!-- Typing indicator bar -->
            <Border x:Name="TypingStatusBar"
                    Background="{DynamicResource TypingBackground}"
                    Padding="3"
                    Margin="0,0,0,4"
                    Visibility="Collapsed">
                <TextBlock x:Name="TypingStatusText"
                           Foreground="{DynamicResource TypingForeground}"
                           FontStyle="Italic"/>
            </Border>

            <!-- Input & Send -->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TbInput" Width="600" KeyDown="TbInput_KeyDown"
                         Background="{DynamicResource InputBackground}"
                         Foreground="{DynamicResource TextBrush}"
                         TextChanged="TbInput_TextChanged"/>
                <Button x:Name="BtnSend" Content="Send" Click="BtnSend_Click" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
