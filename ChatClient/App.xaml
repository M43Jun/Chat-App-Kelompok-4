<Application x:Class="ChatClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <!-- Default Light Theme -->
        <SolidColorBrush x:Key="WindowBackground" Color="White"/>
        <SolidColorBrush x:Key="InputBackground" Color="White"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="LightGray"/>
        <SolidColorBrush x:Key="ButtonDisabledBackground" Color="Gainsboro"/>
        <SolidColorBrush x:Key="TextBrush" Color="Black"/>
        <SolidColorBrush x:Key="TextDisabledBrush" Color="DarkGray"/>

        <!-- Global style for buttons -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}" />
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource ButtonDisabledBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
                    <Setter Property="BorderBrush" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
